<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

    <filter>
        <filter-name>User</filter-name>
        <filter-class>Orders.User</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>User</filter-name>
        <url-pattern>/AuthorizationForm.jsp</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>servlet</servlet-name>
        <servlet-class>Orders.Servlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>servlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>login.do</servlet-name>
        <servlet-class>Orders.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login.do</servlet-name>
        <url-pattern>/loginForm.jsp</url-pattern>
    </servlet-mapping>

</web-app>
